{% extends 'base.html.twig' %}

{% block title %}Projet Symfony - Connexion{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% if error %}
            <div class="alert alert-danger mt-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        

        <form action="{{ path('security.login') }}" method="post" name="login">
            <div>
                <label for="username" class="form-label mt-4">Adresse Email</label>
                <input type="email" class="form-control" id="username" name="_username" placeholder="projetSymfony@gmail.com" value="{{ last_username }}">
              </div>
              <div>
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="********" autocomplete="off">
              </div>

              <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>

    </div>

{% endblock %}
